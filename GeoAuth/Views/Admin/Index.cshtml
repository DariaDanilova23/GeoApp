@using GeoAuth.Models;
@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>;

@{
    ViewData["Title"] = "Admin Page";
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ol@v7.1.0/ol.css">
    <link rel="stylesheet" href="~/css/admin.css">
}

<table class="table table-sm table-bordered">
    <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Телефон</th>
    </tr>
    @foreach (var user in Model) //Вывод всех пользователей в системе
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.PhoneNumber</td>
            <td><a asp-action="ManageUserRoles" asp-route-userId="@user.Id" class="changeUser-btn">Изменить</a></td>
            <td>
                <form asp-action="DeleteUser" asp-route-userId2="@user.Id" method="post">
                    <button class="deleteUser-btn" type="submit">Удалить</button>
                </form>
            </td>
        </tr>
    }
</table>